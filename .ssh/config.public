# vim:ft=sshconfig:

AddKeysToAgent yes
#ForwardX11 yes
HashKnownHosts no
#IdentitiesOnly yes
PermitLocalCommand yes
LocalCommand terminal-title '%r@%h'
NoHostAuthenticationForLocalhost yes
NumberOfPasswordPrompts 2
#ServerAliveInterval 120
VerifyHostkeyDNS yes
GSSAPIAuthentication no
ControlMaster auto
ControlPath ~/.ssh/master-%r_%h_%p
ControlPersist 1
SendEnv LC_TZ

# misc
host github.com git.*
 user git

host 192.* 10.* 172.* *.dmz
 user root
