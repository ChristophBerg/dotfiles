#!/bin/sh

set -eu

CLEAN=yes
GIT=git

while getopts "cg" opt ; do
  case $opt in
    c) CLEAN="" ;;
    g) GIT="" ;;
    *) exit 5 ;;
  esac
done
# shift away args
shift $(($OPTIND - 1))

distribution=$(dpkg-parsechangelog -Sdistribution)
if [ "$distribution" = "UNRELEASED" ]; then
  echo "Distribution is UNRELEASED. Fix that before uploading."
  exit 1
fi

[ "$CLEAN" ] && dclean
qpop -a || [ $? = 2 ]
echo

changes=$(ls -t ../*.changes | head -1)
printf '\e[1;34m'
ls -l $changes
printf '\e[0;34m'
cat $changes
printf '\e[0m'

echo
[ -d .git ] && git --no-pager status

if [ ! -f debian/gitlab-ci.yml ]; then
  printf '\e[1;31mNo debian/gitlab-ci.yml found\e[0m\n'
fi

if [ "$GIT" ]; then
  echo
  echo -n "Push? "
  read push

  git pull --ff-only
  if git status -s | grep -q '^[^?]'; then
    git add -u debian
    debcommit -r
  fi
  git npush
fi

echo
echo -n "Upload? "
read upload

[ "$GIT" ] && git push
set -x
debsign $changes
dput $changes
