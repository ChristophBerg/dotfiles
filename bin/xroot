#!/bin/sh

cleanup () {
	[ "$file" ] && rm -f "$file"
}

trap "cleanup" 0 1 2 15

comic () {
	file=$(mktemp comicXXXXXX)
	wget -q -O "$file" "http://www.df7cb.de/bin/random-comic"
	if [ -s "$file" ] ; then
		display -background navy -backdrop -window root "$file"
	fi
	cleanup
}

comic

if [ "$1" = "loop" ] ; then
	while sleep 1200 ; do
		comic
	done
fi
