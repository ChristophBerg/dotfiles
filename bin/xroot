#!/bin/sh
# $Id$

if [ $1 ] ; then
	FILE="$1"
elif up d096.stw.stud.uni-saarland.de ; then
	URL="http://www.heim-d.uni-sb.de/cgi-bin/cb/randompic"
	FILE="/tmp/xroot-$$"
	RM=1
	wget -q -O "$FILE" "$URL"
else
	FILE="$HOME/bilder/back"
fi

XV="xv -root -quit -ncols 12 +noresetroot -rmode 5 -rbg navy"
[ -f $FILE ] && $XV $FILE

[ $RM ] && rm -f $FILE
