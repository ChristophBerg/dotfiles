#!/bin/sh

# DWIM cvs/svn/whatever wrapper.
# (public domain) 2008 Christoph Berg <cb@df7cb.de>
# One of the scripts I should have written years ago.

try_vcs_dir ()
{
	dir="$1"
	#echo "Looking in $dir ..."
	if [ -d $dir/CVS ] ; then
		VCS=cvs
	elif [ -d $dir/.svn ] ; then
		VCS=svn
	elif [ -d $dir/.hg ] ; then
		VCS=hg
	elif [ -d $dir/.git ] ; then
		VCS=git
	elif [ -d $dir/.bzr ] ; then
		VCS=bzr
	else
		return 1
	fi
	return 0
}

find_vcs ()
{
	base="$1"
	#echo "Looking from $base ..."
	if try_vcs_dir $base || try_vcs_dir $base/.. || try_vcs_dir $base/../.. ; then
		echo "$VCS: $dir" 1>&2
		return 0
	fi
	echo "No VCS found" 1>&2
	exit 1
}

command="$1"
test "$command" && shift

for base in "$@" ; do : ; done
test -d "$base" || base="$(dirname "$base")"
test -d "$base" || base="."
find_vcs "$base"

#echo $VCS "$@"
case $command in
	ci|com|commit) case $VCS in
		hg) hg $command "$@" && hg push ;;
		*) $VCS $command "$@" ;;
	esac ;;
	pull) case $VCS in
		hg) hg pull -u "$@" ;;
		svn) [ "$1" = "-u" ] && shift
		     svn update "$@" ;;
		*) $VCS $command "$@" ;;
	esac ;;
	st|status) case $VCS in
		cvs) cvs update "$@" ;;
		*) $VCS $command "$@" ;;
	esac ;;
	up|update) case $VCS in
		hg) hg pull -u "$@" ;;
		*) $VCS $command "$@" ;;
	esac ;;
	add|co|cp|diff|info|log|mv|push|resolved|revert|rm|"")
		$VCS $command "$@" ;;
	*)	echo "$0: $VCS command '$command' not recognized. YMMV." 1>&2
		$VCS "$command" "$@" ;;
esac
