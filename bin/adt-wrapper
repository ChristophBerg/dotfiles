#!/bin/sh

set -ex

mkdir -p /tmp/adt-out
test -f debian/files
binaries=$(awk '/\.deb / { print "--binary ../" $1 }' debian/files)

cleanup () {
	test -d /tmp/adt-out && sudo chmod go+rX -R /tmp/adt-out
}
trap cleanup 0 2 3 15

sudo adt-run --tmp-dir /tmp/adt-out --summary /tmp/adt-summary \
	$binaries --built-tree $PWD \
	--- adt-virt-null
