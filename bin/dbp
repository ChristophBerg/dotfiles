#!/bin/sh

DIST=$(dpkg-parsechangelog | awk '/^Distribution:/ { print $2 }')

case $DIST in
	*backports*)
		#PKG=$(dpkg-parsechangelog | awk '/^Source:/ { print $2 }')
		#echo "Asking rmadison for last $DIST version ..."
		#MADISON="$(rmadison -u bpo -s $DIST $PKG)"
		##echo "$MADISON"
		#OLDVERSION=$(echo $MADISON | cut -d '|' -f 2 | sed -e 's/ //g')
		OLDVERSION=$(sed -ne "1d;s/^.* (\\(.*\\)) $DIST; .*/\\1/p" debian/changelog | head -n1)
		[ "$OLDVERSION" ] && ARG_V="-v$OLDVERSION" # empty for the first upload
		VERSION=$(dpkg-parsechangelog | awk '/^Version:/ { print $2 }')
		case $VERSION in
			*-1~bpo*+1) ARG_SA="-sa" ;;
		esac
		echo Adding dpkg-buildpackage arguments $ARG_V $ARG_SA
		;;
esac

dpkg-buildpackage -rfakeroot -us -uc -i -I $ARG_V $ARG_SA "$@"
