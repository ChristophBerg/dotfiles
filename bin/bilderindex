#!/usr/bin/perl -w

#<map name="Testbild"> 
#<area shape=rect coords="1,1,249,49" href="#Anker"> 
#</map>
#<img src="hypgraph.gif" usemap="#Testbild" border=0>

$fname = "bilder";

print "Schreibe $fname.html...\n";

open F, "> $fname.html" or die "$fname.html: $!";

print F "<map name=bilderindex>\n";
$n = 0;
foreach (@ARGV) {
	$left = ($n % 6) * 122;
	$right = $left + 121;
	$top = int($n / 6) * 92;
	$bottom = $top + 91;
	print F " <area shape=rect coords=\"$left,$top,$right,$bottom\" href=\"$_\" alt=\"$_\">\n";
	$n++;
}
print F "</map>\n";

print F "<img src=$fname.jpg usemap=#bilderindex border=0>\n\n";
close F;

print "Schreibe $fname.jpg...\n";
$a = join " ", @ARGV;
system "montage -geometry 120x90+1+1 -background white -tile 6x100 $a $fname.jpg";
