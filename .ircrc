/on ^leave "* * *" whois $0;ts 6*** $0 left $1: $2-
/on ^mail * ts 7*** new mail
/on ^mode "* * *" echo 11*** Mode change "$2-" on $1 by $0
/on ^msg "* *" ts 3*$0* $1-
#/on ^msg "rosine *" ts 3*$03* $1-
/on -msg "* *troet*" exec nc d056 ttylink
/on ^nick "* *" echo 6*** $0 -> $1
/on ^public "* * *" echo <2$0> $2-
/on ^public "*rosine* * *" echo <2$0> $2-
/on ^public "* * *cb*" echo <2$0> $2-
/on ^public "* * *myon*" echo <2$0> $2-
/on ^topic "* * *" ts 7*** Topic on $1 by $0: $2-
/on ^signoff "* *" whowas $0;ts 6*** $0 signed off: $1-
/on ^send_action "*" echo 4* $N $1-
/on ^send_msg "* *" echo ->3 *$0* $1-
/on ^send_public "*" echo 4> $1-
