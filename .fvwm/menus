# $Id$

# main menus

DestroyMenu Main
AddToMenu Main	"fvwm2"		Title
+		"xterm LO"	Function XTermLO
+		"xterm RO"	Function XTermRO
+		"xterm LU"	Function XTermLU
+		"xterm RU"	Function XTermRU
+		"4 xterms"	Function 4XTerm
+		""		Nop
+		"netscape"	Exec netscape
+		" @hal"		Exec ssh -f -c none hal netscape
+		" @goedel"	Exec ssh -f goedel netscape
+		" @wjpserver"	Exec ssh -f wjpserver netscape
+		"xtnt"		Exec ssh -f df7cb@df7cb.heim-d.uni-sb.de xtnt
+		"gv"		Exec gv
+		"mw"		Exec mw
+		""		Nop
+		"dpmsoff"	Exec dpmsoff
+		"xlock"		Exec dpmsoff blank
+		""		Nop
+		"Window Ops"	Popup WindowOps
+		"fvwm2..."	Popup FvwmMenu
+		"Keymaps"	Popup KeymapMenu
+		""		Nop
+		"Quit FVWM"	Quit
+		"Quit X"	Exec killall xterm


DestroyMenu FvwmMenu
AddToMenu FvwmMenu	"fvwm2"	Title
+			"FvwmTalk"	Module FvwmTalk
+			"3x3 Desktop"	DeskTopSize 3 3
+			"Modules"	Popup ModulePopup
+			""		Nop
+			"Refresh"	Refresh
+			"Recapture"	Recapture
+			"Restart"	Restart fvwm2
#+			"Start fvwm1"	Restart fvwm
+			"Quit"		Quit


DestroyMenu WindowOps
AddToMenu WindowOps "Window Ops"	Title
+			"Move"		Move
+			"Resize"	Resize
+			"Resize..."	Popup ResizeMenu
+			"Maximize"	Maximize
+			"Iconify"	Iconify
+			"Stick"		Stick
+			"Shade"		WindowShade
+			""		Nop
+			"Raise"		Raise
+			"Lower"		Lower
+			"Refresh"	RefreshWindow
+			""		Nop
#+			"Next focus"	Next [*] Focus
#+			"Prev focus"	Prev [*] Focus
+			"Window list"	WindowList
+			"Identify"	Module FvwmIdent
+			""		Nop
+			"Delete"	Delete
+			"Close"		Close
+			"Destroy"	Destroy


DestroyMenu ResizeMenu
AddToMenu ResizeMenu	"Resize/Move"	Title
+			"80x25"		Resize 49 43
+			"Max hor"	Maximize 100 0
+			"Max vert"	Maximize 0 100
+			"Maximize"	Maximize 100 100
+			""		Nop
+			"LO"		Move 0 0
+			"RO"		Move 50 0
+			"LU"		Move 0 44
+			"RU"		Move 50 44


DestroyMenu KeymapMenu
AddToMenu KeymapMenu	"Keymaps"	Title
+			"PC"		Exec xmodmap $HOME/.xmodmap-pc
+			"PC (D)"	Exec xmodmap $HOME/.xmodmap-pc-d
+			"Sun"		Exec xmodmap $HOME/.xmodmap-sun
+			"NCD"		Exec xmodmap $HOME/.xmodmap-ncd
+			""		Nop
+			"xkeycaps"	Exec xkeycaps


