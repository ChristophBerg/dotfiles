+		"Network"	Popup Network
+		"Screen"	Popup Screen
+		"Window"	Popup WindowOps
+		""		Nop
#+		"Quit FVWM"	Quit
+		"Quit X"	Exec killall xterm


DestroyMenu Apps
AddToMenu Apps	"Apps"		Title
+		"netscape"	Exec netscape
+		"opera"		Exec opera
+		"xtnt"		Exec ssh -f df7cb@df7cb.heim-d.uni-sb.de xtnt
