+		"reboot"	Exec reboot
+		"init 2"	Exec init 2
+		"init 3"	Exec init 3


DestroyMenu Mail
AddToMenu Mail	"Mail"	Title
+		"wmbiff"	Exec wmbiff -geometry +960+416
+		"  offline"	Exec wmbiff -geometry +960+416 -c /home/cb/.wmbiffrc-offline
+		"mailsync"	Nop
+		"  heim-d-in"	Exec mailsync -lf heim-d-in
+		"  heim-d"	Exec mailsync -lf heim-d
+		"  wjp-in"	Exec mailsync -lf wjp-in
+		"  wjp"		Exec mailsync -lf wjp


DestroyMenu Network
