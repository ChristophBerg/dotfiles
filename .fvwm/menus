+		"xroot"		Exec xroot
+		" offline"	Exec xv -root -quit +noresetroot bilder/back


DestroyMenu FvwmMenu
AddToMenu FvwmMenu	"fvwm2"	Title
+			"FvwmTalk"	Module FvwmTalk
+			"3x3 Desktop"	DeskTopSize 3 3
+			"Modules"	Popup ModulePopup
+			""		Nop
