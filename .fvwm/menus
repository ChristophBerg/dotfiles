+	"Maximize	F11"	Function Maximize100100
+	"Max horiz	F12"	Function Maximize1000


DestroyMenu ResizeMenu
AddToMenu ResizeMenu	"Resize/Move"	Title
+			"80x25"		Resize 49 43
+			"Max hor"	Maximize 100 0
+			"Max vert"	Maximize 0 100
