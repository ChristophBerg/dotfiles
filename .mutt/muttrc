# key bindings
bind index - previous-page
bind browser <space> next-page
bind index <space> next-page
#bind pager <space> next-page
bind pager <up> previous-line
bind pager <down> next-line
bind index \# delete-message
bind pager \# delete-message
macro generic d s=deleted\cM 'Move message to trash folder'
macro index d s=deleted\cM 'Move message to trash folder'
macro pager d s=deleted\cM 'Move message to trash folder'
bind index G last-entry
bind pager G bottom
macro index = s=

