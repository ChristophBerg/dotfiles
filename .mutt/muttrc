unset fcc_attach
set folder="~/mail"
set forward_format="%s (fwd)"
unset help
set hidden_host
#set index_format="%3C %Z %4c %[%b %e %k:%M] %-15.15F %s"
set ispell="aspell --lang=de check"
#set locale="de_DE.ISO-8859-1"
unset markers
set menu_scroll
set mime_forward=ask-yes
