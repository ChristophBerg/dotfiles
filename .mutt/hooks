# vim:ft=muttrc:
unhook folder-hook

folder-hook .			'push <delete-pattern>~=\n'

folder-hook .			set index_format=\"%3C %Z %?M?%3Mm&%4c? %[%b %e %k:%M] %-15.15F %s\"
folder-hook debian|lists	set index_format=\"%3C %Z %?M?%3Mm&%4c? %[%b %e %k:%M] %-15.15F %-10.10B %s\"

folder-hook debian|lists	'push "<delete-pattern>!~F ~R ~d>1m\n"'
folder-hook debian|lists	exec collapse-all
