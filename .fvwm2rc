# cb 990603 ###################################################################

###############################################################################
#   paths specific to fvwm2                                                   #
###############################################################################
# n.b. These paths must NOT be longer than 255 chars

ModulePath /usr/X11R6/lib/X11/fvwm2

PixmapPath /usr/include/X11/3dpixmaps/small:\
	/usr/include/X11/3dpixmaps/normal:\
	/usr/include/X11/pixmaps:\
	/usr/include/X11/susexpm/small:\
	/usr/include/X11/susexpm/normal:\
	/usr/include/X11/susexpm/mini\

IconPath /usr/X11R6/include/X11/bitmaps


# Import other files ######################################################

Read .fvwm2rc-local
FvwmM4 .fvwm2rc-xterm.m4 
Read .fvwm2rc-functions
Read .fvwm2rc-modules
Read .fvwm2rc-menus


###############################################################################
#   window buttons                                                            #
#   1 3 5 7 9  0 8 6 4 2                                                      #
###############################################################################

# Dot for Zapp
ButtonStyle 3 5 50x50@0 40x50@0 40x40@1 50x40@1 50x50@0

# Box for Raise
ButtonStyle 0 5 20x20@1 80x20@1 80x80@0 20x80@0 20x20@1

# Cross for Stick
ButtonStyle 8 13 20x60@1 20x40@1 40x40@1 40x20@1 60x20@1 60x40@0 80x40@1 80x60@0 60x60@0 60x80@0 40x80@0 40x60@1 20x60@0

# Bar for Shade
ButtonStyle 6 5 20x40@1 20x20@1 80x20@1 80x40@0 20x40@0

# Large down Triangle for Iconify
ButtonStyle 4 4 50x74@1 25x24@1 75x24@1 50x74@0

# Large up Triangle for Maximize
ButtonStyle 2 4 50x24@1 75x74@0 25x74@0 50x24@1


###############################################################################
#   general configuration                                                     #
###############################################################################

# this describes how many rows and columns are displayed in the pager
DeskTopSize 3x2

#EdgeResistance 300 20
EdgeResistance 0 20
EdgeScroll 100 100

ClickTime 200

ColormapFocus FollowsMouse

OpaqueMoveSize 10

CursorStyle TITLE 52	# fleur
CursorStyle SYS 90	# plus
CursorStyle MOVE 50	# exchange
CursorStyle MENU 122	# spider
#CursorStyle SELECT 0	# X_cursor

# value to make frames visible when dragging or resizing a window
# for more info see "man fvwm95"
#XORvalue 255
XORvalue 205

###############################################################################
#   colors and fonts                                                          #
###############################################################################

# Text and background color for the title bar of the selected window
HilightColor 		yellow #c06077

Style	"*"		ForeColor Black
Style	"*"		BackColor LightSkyBlue

# Style for fonts is
#-fndry-fmly-wght-slant-sWdth-adstyl-pxlsz-ptSz-resx-resy-spc-avgWdth-rgstry-encdng
#

# Menu colors and font
#         bg    fg   disabled  font           sub-menu-style
MenuStyle Black Grey LightGrey \
	-misc-fixed-medium-r-normal-*-15-*-75-75-c-90-iso8859-1 fvwm

# Now the common fonts - one for window titles, another for icons
#WindowFont	-misc-fixed-bold-r-normal-*-13-*-75-75-c-80-iso8859-1
WindowFont	-*-lucida-bold-r-*-*-14-*-*-*-*-*-iso8859-*
IconFont	-misc-fixed-medium-r-normal-*-10-*-75-75-c-60-iso8859-1


###############################################################################
#   style options for modules and programs                                    #
###############################################################################

Style  "*"		BorderWidth 5, HandleWidth 5
Style  "*"              Icon small.Template.xpm

Style	"*"		SloppyFocus

Style	"*"		SmartPlacement, RandomPlacement

# decorations for transient windows
#Style	"*"		DecorateTransient
Style	"*"		NakedTransient

# flat window borders when inactive
BorderStyle Inactive -- HiddenHandles NoInset

# where icons will be placed
Style   "*"     IconBox +55 +85 +130 +480
# icons are reachable in every virtual screen
Style	"*"		StickyIcon
#Style	"*"		SmartPlacement, RandomPlacement, ActivePlacement
Style	"*"		NoPPosition

# fvwm stuff
Style  "FvwmPager"	NoTitle, Sticky, WindowListSkip
Style  "FvwmButtons"	NoTitle, Sticky, WindowListSkip
Style  "FvwmBanner"	NoTitle, Sticky, StaysOnTop, WindowListSkip
Style  "FvwmWinList"	NoTitle, WindowListSkip, NakedTransient
Style  "IconManModule"	NoTitle, Sticky, NoHandles, Icon toolbox.xpm

# .xinitrc stuff
Style	"console*"	Sticky, WindowListSkip
Style	"coolmail"	NoTitle, Sticky, WindowListSkip
Style	"*clock*"	NoTitle, Sticky, WindowListSkip, ClickToFocus
Style	"xclock"	StaysOnTop
Style	"xeyes"		NoTitle, Sticky, WindowListSkip
Style	"xmeter"	NoTitle, Sticky, WindowListSkip
Style	"xosview*"	Icon meter_3d.xpm, ClickToFocus, NoTitle, Sticky, UsePPosition, WindowListSkip
Style	"ProcMeter*"	NoTitle, Sticky, WindowListSkip, ClickToFocus

# general
#Style	"root*"		BackColor Red
Style	"xv 3*"		NoTitle
Style	"xterm"		Icon Terminal.xpm
Style	"emacs*"	Icon DTP.xpm
Style	"xconsole"	Icon clipboard_3d.xpm
Style	"dsk_*"		Icon FileManager.xpm
Style	"TkMan"		Icon library_3d.xpm
Style	"Xman"		Icon xman3d.xpm
Style	"Root"		Icon Diavolo.xpm
Style	"xv*"		Icon xv.color.xpm 

#Style  "xclock"		BackColor Grey

# these are needed for the placement of the items in
# the button bar
#Style	"coolmail"	SmartPlacement, RandomPlacement
#Style	"xeyes"		SmartPlacement, RandomPlacement
#Style	"xclock"	SmartPlacement, RandomPlacement



