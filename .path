#!/bin/sh
# $Id$

#echo PATH=$PATH
#echo MANPATH=$MANPATH
#echo INFOPATH=$INFOPATH

IFS_SAVE=$IFS
IFS=":"

save=$PATH
unset PATH
for dir in \
	/local/atools/cb/bin \
	/local/atools/bin \
	$HOME/bin/${OS:-OSDIR} \
	$HOME/bin \
	$HOME/bin/misc-bin \
	/usr/local/sbin \
	/usr/local/bin \
	/usr/sbin \
	/usr/bin \
	/sbin \
	/bin \
	/usr/X11R6/bin \
	/installer/arch/bin \
	/usr/local/samba/bin \
	/usr/local/pgsql/bin \
	/usr/openwin/bin \
	/usr/compat/linux/bin \
	/usr/ucb /usr/5bin /usr/pkg/bin \
	/usr/games \
	/usr/games/bin \
	$save
	do case :$PATH: in
		*:$dir:*) ;;
		*) [ -d $dir ] && PATH="$PATH${PATH:+:}$dir" ;;
	esac
done

save=$MANPATH
unset MANPATH
for dir in \
	/local/atools/cb/man \
	/local/atools/man \
	$HOME/man \
	/usr/local/man \
	`manpath 2> /dev/null` \
	$save
	do case :$MANPATH: in
		*:$dir:*) ;;
		*) [ -d $dir ] && MANPATH="$MANPATH${MANPATH:+:}$dir" ;;
	esac
done

save=$INFOPATH
unset INFOPATH
for dir in \
	/local/atools/cb/info \
	/local/atools/info \
	$HOME/info \
	/usr/local/share/info \
	/usr/local/info \
	/usr/share/info \
	$save
	do case :$INFOPATH: in
		*:$dir:*) ;;
		*) [ -d $dir ] && INFOPATH="$INFOPATH${INFOPATH:+:}$dir" ;;
	esac
done

unset TEXINPUTS
for dir in \
	$HOME/lib/latex $HOME/lib/latex/*
	do case $dir in
		*CVS) ;;
		*) [ -d $dir ] && TEXINPUTS="${TEXINPUTS}:$dir" ;;
	esac	# $TEXINPUTS starts with ':'
done

[ -f $HOME/lib/make/Makefile ] && export MAKEFILES=$HOME/lib/make/Makefile

IFS=$IFS_SAVE
unset dir save IFS_SAVE
export PATH MANPATH INFOPATH TEXINPUTS

#echo PATH=$PATH
#echo MANPATH=$MANPATH
#echo INFOPATH=$INFOPATH
